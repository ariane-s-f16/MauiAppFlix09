<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFlix.acao"
             Title="acao">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
	<ScrowView>
		<Grid RowDefinitions="300,300,300" ColumnDefinitions="*,*" Padding="5">
			<imagemButton aspect="Aspectfill" Grid.Column="0" Grid.row="0" source="acao_vingadores-ultimato.jpg" x:name="btnVingador" clicked="btnvingador_cliked"/>
			<imagemButton aspect="Aspectfill" Grid.Column="0" Grid.row="0" source="acao_300.jpg" x:name="btn300" clicked="btn300_cliked"/>
			<imagemButton aspect="Aspectfill" Grid.Column="0" Grid.row="0" source="acao_clube-da-luta.jpg" x:name="btnVingador" clicked="btnvingador_cliked"/>
			<imagemButton aspect="Aspectfill" Grid.Column="0" Grid.row="0" source="acao_karate-kid.jpg" x:name="btn300" clicked="btn300_cliked"/>

			<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
						 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
						 x:class="mauiAppFlix.Filmes.Vingador" title="vingador" background="grey">
				
			</ContentPage>
		</Grid>
		
		
		
	</ScrowView>
</ContentPage>